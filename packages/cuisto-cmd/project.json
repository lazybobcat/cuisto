{
    "name": "cuisto-cmd",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/cuisto-cmd/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/packages/cuisto-cmd",
                "main": "packages/cuisto-cmd/src/index.ts",
                "tsConfig": "packages/cuisto-cmd/tsconfig.lib.json",
                "assets": [
                    "packages/cuisto-cmd/*.md"
                ],
                "format": [
                    "esm"
                ],
                "platform": "node"
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs cuisto-cmd {args.ver} {args.tag}",
            "dependsOn": [
                "build"
            ]
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": [
                "{options.reportsDirectory}"
            ],
            "options": {
                "reportsDirectory": "../../coverage/packages/cuisto-cmd"
            }
        }
    },
    "tags": []
}
